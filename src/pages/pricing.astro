---
import BaseLayout from '../layouts/BaseLayout.astro';
import PricingCard from '../components/PricingCard.astro';
import FinalCTA from '../components/FinalCTA.astro';
import config from '../data/site-config.json';
---

<BaseLayout title="Pricing" description="Simple, transparent pricing for Ascend Systems AI phone answering. Plans start at $199/mo. No contracts, 30-day money-back guarantee.">

  <!-- Hero — Dark -->
  <section class="hero-gradient grain section-padding !pb-12 relative overflow-hidden">
    <div class="absolute inset-0 z-0" style="background: radial-gradient(ellipse 40% 40% at 70% 30%, rgba(59, 107, 138, 0.04), transparent);"></div>
    <div class="container-narrow text-center relative z-10">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Pricing</p>
      <h1 class="text-white mb-6 reveal">Simple Pricing.<br />No Surprises. No Contracts.</h1>
      <p class="text-lg md:text-xl text-gray-400 max-w-2xl mx-auto reveal">
        Every plan pays for itself with 1-2 extra booked jobs per month. Most businesses see that in the first week.
      </p>
    </div>
  </section>

  <!-- Plan Cards -->
  <section class="section-padding !pt-12" style="background: #EDF2F7;">
    <div class="container-narrow max-w-4xl">
      <div class="grid md:grid-cols-3 gap-6 md:gap-4 mb-12 reveal">
        <PricingCard
          name="Starter"
          price={199}
          description="Solo operators who need coverage when they can't answer"
          minutes="200"
          features={[
            '24/7 live answering',
            'Lead capture + SMS alerts',
            'Appointment booking',
            'Call recordings & transcripts',
            'Basic AI training on your business',
          ]}
        />
        <PricingCard
          name="Professional"
          price={299}
          description="Growing businesses with steady call volume"
          minutes="500"
          popular={true}
          features={[
            'Everything in Starter',
            'Bilingual (English + Spanish)',
            'CRM integration (Jobber, ServiceTitan, etc.)',
            'Advanced AI training & custom call flows',
            'Priority support',
          ]}
        />
        <PricingCard
          name="Enterprise"
          price={499}
          description="Multi-location businesses and franchises"
          minutes="Unlimited"
          ctaText="Contact Brian"
          features={[
            'Everything in Professional',
            'Unlimited call minutes',
            'Multi-location support',
            'Dedicated account manager',
            'Premium AI training & custom integrations',
          ]}
        />
      </div>
    </div>
  </section>

  <!-- Which Plan -->
  <section class="section-padding" style="background: #E2E8F0;">
    <div class="container-narrow max-w-3xl">
      <h2 class="text-center mb-12 reveal">Which Plan Is Right For Me?</h2>

      <div class="grid md:grid-cols-3 gap-6 mb-12">
        {[
          { plan: 'Starter', desc: "You're a solo operator or have 1-2 employees. Under 50 calls/month. You mainly need after-hours and busy-time coverage.", icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>' },
          { plan: 'Professional', desc: 'You have a small team (3-10 employees). 50-200 calls/month. You serve Spanish-speaking customers or want leads pushed into your CRM.', icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>' },
          { plan: 'Enterprise', desc: 'You run 2+ locations or get 200+ calls/month. Need custom integrations and a dedicated point of contact.', icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>' },
        ].map(({ plan, desc, icon }, i) => (
          <div class={`card reveal reveal-delay-${i + 1}`}>
            <div class="icon-box" set:html={icon} />
            <p class="font-semibold text-charcoal mb-2">{plan}</p>
            <p class="text-gray-500 text-sm">{desc}</p>
          </div>
        ))}
      </div>

      <p class="text-center text-gray-500 reveal">
        Still not sure? <a href="/contact" class="font-medium transition-colors hover:underline" style="color: #D4632C;">Book a demo</a> — Brian will recommend the right plan. No pressure.
      </p>
    </div>
  </section>

  <!-- Comparison -->
  <section class="section-padding" style="background: #EDF2F7;">
    <div class="container-narrow">
      <h2 class="text-center mb-12 reveal">How We Compare</h2>

      <div class="card !p-0 overflow-x-auto reveal">
        <table class="w-full min-w-[640px] text-sm">
          <thead>
            <tr style="border-bottom: 2px solid #CBD5E0; background: #E2E8F0;">
              <th class="py-4 px-5 text-left font-medium text-gray-500"></th>
              <th class="py-4 px-5 text-center font-semibold" style="color: #D4632C;">{config.brand}</th>
              <th class="py-4 px-5 text-center font-medium text-gray-500">Ruby</th>
              <th class="py-4 px-5 text-center font-medium text-gray-500">Smith.ai</th>
              <th class="py-4 px-5 text-center font-medium text-gray-500">Dialzara</th>
              <th class="py-4 px-5 text-center font-medium text-gray-500">Traditional</th>
            </tr>
          </thead>
          <tbody class="divide-y" style="--tw-divide-opacity: 1; --tw-divide-color: #E2E8F0;">
            {[
              ['Monthly Cost', '$199-499', '$705+', '$140-475', '$29+', '$200-500'],
              ['24/7 Coverage', 'Yes', 'Limited', 'Limited', 'Yes', 'Limited'],
              ['First-Ring Answer', 'Yes', 'No', 'No', 'Yes', 'No'],
              ['Books Appointments', 'Yes', 'Basic', 'Yes', 'Limited', 'No'],
              ['Custom Training', 'Yes', 'No', 'Limited', 'DIY', 'No'],
              ['Bilingual', 'Included', 'Extra $', 'Extra $', 'Limited', 'Extra $'],
              ['No Contract', 'Yes', 'No', 'Yes', 'Yes', 'Usually no'],
              ['Local Support', "Brian's cell", 'Ticket', 'Ticket', 'Email', 'Varies'],
            ].map(([feature, ...values]) => (
              <tr class="hover:bg-gray-50 transition-colors">
                <td class="py-3 px-5 font-medium text-charcoal">{feature}</td>
                {values.map((val, i) => (
                  <td class:list={['py-3 px-5 text-center', i === 0 ? 'font-medium text-charcoal' : 'text-gray-500']}>
                    {val}
                  </td>
                ))}
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Guarantee -->
  <section class="section-dark grain section-padding relative overflow-hidden">
    <div class="absolute inset-0" style="background: radial-gradient(ellipse 60% 40% at 50% 100%, rgba(34, 197, 94, 0.06), transparent);"></div>
    <div class="container-narrow max-w-2xl text-center relative z-10">
      <div class="reveal">
        <div class="inline-flex items-center justify-center w-12 h-12 rounded-xl mb-4" style="background: rgba(34, 197, 94, 0.15); color: #22C55E;">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
        </div>
        <h2 class="text-white mb-4">30-Day Money-Back Guarantee</h2>
        <p class="text-gray-400 text-lg leading-relaxed mb-8">
          If {config.brand} doesn't pay for itself in 30 days, you get every penny back. No forms. No hoops. That's a handshake promise from a local guy, not corporate fine print.
        </p>
        <a href="/contact" class="btn-primary text-lg !px-10 !py-4">Start Risk-Free</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section-padding" style="background: #EDF2F7;">
    <div class="container-narrow max-w-2xl">
      <h2 class="text-center mb-12 reveal">Pricing Questions</h2>

      <div class="reveal" style="border-top: 1px solid #CBD5E0;">
        {[
          { q: 'What happens if I go over my minutes?', a: 'We\'ll give you a heads up when you\'re close. Additional minutes are billed at a fair per-minute rate. Or upgrade your plan anytime.' },
          { q: 'Can I switch plans?', a: 'Yes, upgrade or downgrade anytime. Changes take effect on your next billing cycle.' },
          { q: 'Is there a contract?', a: 'No. Month-to-month. Cancel anytime with a quick email.' },
          { q: 'Do you offer annual discounts?', a: 'Not currently. We keep things simple with month-to-month pricing so you\'re never stuck.' },
          { q: 'What\'s included in every plan?', a: '24/7 answering, SMS lead alerts, call recordings, appointment booking, and your own custom-trained AI assistant.' },
          { q: 'Can I try it before I pay?', a: 'Yes. Book a free demo and Brian will set up a test call so you can hear your AI assistant live. No credit card needed.' },
        ].map(({ q, a }) => (
          <details class="group" style="border-bottom: 1px solid #CBD5E0;">
            <summary class="flex items-center justify-between py-5 text-left">
              <span class="font-medium text-charcoal pr-4">{q}</span>
              <svg class="chevron w-5 h-5 flex-shrink-0 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="pb-5 text-gray-500 leading-relaxed pr-10">{a}</div>
          </details>
        ))}
      </div>
    </div>
  </section>

  <FinalCTA />

</BaseLayout>
