---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PricingCard from '../../components/PricingCard.astro';
import config from '../../data/site-config.json';
---

<style>
  .hero-gradient { background: radial-gradient(ellipse 60% 50% at 50% -10%, rgba(212, 99, 44, 0.05), transparent 70%), #3A2A1A !important; }
  .section-dark { background: #3A2A1A !important; }
  .section-darkest { background: #2E2214 !important; }
  .card-dark { background: #4A3A2A !important; border-color: #5A4A3A !important; }
  .card-dark:hover { border-color: rgba(212, 99, 44, 0.4) !important; }
</style>

<BaseLayout title="Home — Copper Background">

  <!-- Color variant label -->
  <div style="position: fixed; top: 70px; left: 16px; z-index: 100; background: #3A2A1A; color: white; padding: 6px 14px; border-radius: 6px; font-size: 13px; font-weight: 600; font-family: 'JetBrains Mono', monospace; border: 1px solid #5A4A3A;">COPPER BG #3A2A1A</div>

  <!-- HERO — Deep copper with subtle orange glow -->
  <section class="hero-gradient grain relative overflow-hidden" style="padding: 6rem 1.5rem 5rem;">
    <div class="absolute inset-0 z-0" style="background: radial-gradient(ellipse 40% 40% at 70% 30%, rgba(212, 99, 44, 0.04), transparent);"></div>
    <div class="container-narrow relative z-10">
      <!-- Tagline chip -->
      <div class="flex justify-center md:justify-start mb-8 reveal">
        <span class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full text-xs font-medium" style="background: rgba(212, 99, 44, 0.1); color: #D4632C; border: 1px solid rgba(212, 99, 44, 0.2);">
          <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span>
          AI-Powered Phone Answering
        </span>
      </div>

      <div class="text-center md:text-left max-w-3xl">
        <h1 class="text-white mb-6 reveal" style="font-size: clamp(2.5rem, 6vw, 3.75rem); font-weight: 800; line-height: 1.05; letter-spacing: -0.03em;">
          Every call,<br />
          <span style="color: #D4632C;">handled.</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-400 max-w-2xl mb-10 reveal" style="line-height: 1.65;">
          AI-powered phone answering and business automation. Set up in 15 minutes. Managed for you. Your customers get a real conversation — you get a text with the details.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start mb-8 reveal">
          <a href="/contact" class="btn-primary text-lg !px-10 !py-4">
            Book a Free Demo
          </a>
          <a href={`tel:${config.phone.demo.replace(/[^0-9+]/g, '')}`} class="btn-secondary-dark text-lg !px-10 !py-4 inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            Call the Demo
          </a>
        </div>

        <p class="text-sm text-gray-500 reveal">
          15-minute setup &middot; No contracts &middot; Cancel anytime
        </p>
      </div>

      <!-- Stats bar — JetBrains Mono numbers -->
      <div class="mt-16 reveal">
        <div class="inline-flex flex-wrap justify-center md:justify-start gap-8 md:gap-12 px-6 py-5 rounded-xl" style="background: rgba(74, 58, 42, 0.5); border: 1px solid rgba(90, 74, 58, 0.5);">
          {[
            { num: '2,847', label: 'Calls Handled' },
            { num: '98.6%', label: 'Answer Rate' },
            { num: '24/7', label: 'Uptime' },
          ].map(({ num, label }) => (
            <div class="text-center">
              <span class="block stat-number text-2xl md:text-3xl stat-glow">{num}</span>
              <span class="stat-label text-gray-500 text-[11px]">{label}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Phone notification mockup -->
      <div class="max-w-sm mt-12 mx-auto md:mx-0 reveal">
        <div class="rounded-2xl p-1" style="background: #4A3A2A; box-shadow: 0 24px 64px rgba(0,0,0,0.4);">
          <div class="rounded-xl p-5 space-y-3" style="background: #3A2A1A;">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: rgba(212, 99, 44, 0.15);">
                <svg class="w-4 h-4" style="color: #D4632C;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              </div>
              <div>
                <p class="text-white text-sm font-semibold">{config.brand}</p>
                <p class="text-gray-500 text-xs">New Lead Alert</p>
              </div>
              <span class="ml-auto text-xs text-gray-500">now</span>
            </div>
            <div class="rounded-lg p-4 space-y-2" style="background: #4A3A2A; border: 1px solid #5A4A3A;">
              <p class="text-white text-sm font-medium">New appointment booked</p>
              <div class="space-y-1.5 text-gray-400 text-xs font-mono">
                <p><span class="text-gray-500">Name:</span> Mike Thompson</p>
                <p><span class="text-gray-500">Phone:</span> (704) 555-0187</p>
                <p><span class="text-gray-500">Needs:</span> Water heater burst — emergency</p>
                <p><span class="text-gray-500">Booked:</span> Tomorrow, 8-10am</p>
              </div>
            </div>
            <p class="text-xs font-medium text-center pt-1" style="color: #22C55E;">Appointment confirmed automatically</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TRUST BAR -->
  <section class="py-6" style="background: #F8F9FA; border-bottom: 1px solid #E5E7EB;">
    <div class="container-narrow">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {[
          { label: 'Locally Owned', icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z' },
          { label: '15-Min Setup', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
          { label: '30-Day Guarantee', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
          { label: '24/7 Coverage', icon: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707' },
        ].map(({ label, icon }) => (
          <div class="flex items-center justify-center gap-2">
            <svg class="w-4 h-4" style="color: #D4632C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
            </svg>
            <span class="text-sm font-medium text-gray-500">{label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- PROBLEM — Stats on dark copper -->
  <section class="section-dark grain section-padding relative overflow-hidden">
    <div class="absolute inset-0" style="background: radial-gradient(ellipse 60% 50% at 30% 50%, rgba(212, 99, 44, 0.04), transparent);"></div>
    <div class="container-narrow text-center relative z-10">
      <p class="stat-label text-gray-400 mb-4 reveal">The problem</p>
      <h2 class="text-white mb-4 reveal">
        You're Bleeding Money Every Time<br />Your Phone Goes to Voicemail
      </h2>
      <p class="text-gray-400 text-lg mb-16 max-w-xl mx-auto reveal">The numbers don't lie.</p>

      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {[
          { stat: '62%', desc: 'of calls to small businesses go unanswered' },
          { stat: '85%', desc: 'of callers who reach voicemail never call back' },
          { stat: '$1,200', desc: 'average revenue lost per missed call' },
        ].map(({ stat, desc }, i) => (
          <div class={`card-dark text-center reveal reveal-delay-${i + 1}`}>
            <span class="block stat-number text-5xl md:text-6xl mb-3 stat-glow">{stat}</span>
            <p class="text-gray-400 text-sm">{desc}</p>
          </div>
        ))}
      </div>

      <div class="max-w-2xl mx-auto text-gray-400 space-y-5 text-lg leading-relaxed reveal">
        <p>
          You didn't start your business to stare at a ringing phone. You started it to do the work.
        </p>
        <p>
          But while you're on a ladder, in a meeting, or eating dinner — your phone rings and nobody picks up. The caller dials your competitor. You never even know it happened.
        </p>
      </div>
    </div>
  </section>

  <!-- SOLUTION — 3 Steps -->
  <section class="section-padding dot-grid" style="background: #F8F9FA;">
    <div class="container-narrow text-center">
      <p class="stat-label mb-4 reveal" style="color: #D4632C;">How it works</p>
      <h2 class="mb-6 reveal">What If Every Call Got Answered?</h2>
      <p class="text-lg text-gray-500 mb-16 max-w-2xl mx-auto reveal">
        {config.brand} is an AI phone assistant that sounds like a real person. It picks up every call, books the appointment, and texts you the details.
      </p>

      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {[
          {
            num: '1',
            title: 'We Set Up Your AI',
            desc: 'We train it on your business — services, hours, pricing. Takes 15 minutes.',
            icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065zM15 12a3 3 0 11-6 0 3 3 0 016 0z',
          },
          {
            num: '2',
            title: 'Calls Get Answered',
            desc: `When someone calls and you can't pick up, ${config.brand} answers. Natural voice. Appointment booked.`,
            icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
          },
          {
            num: '3',
            title: 'You Get a Text',
            desc: 'Name, phone number, what they need, when they\'re available — sent to your phone instantly.',
            icon: 'M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z',
          },
        ].map(({ num, title, desc, icon }, i) => (
          <div class={`card text-center reveal reveal-delay-${i + 1}`}>
            <div class="icon-box mx-auto">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
              </svg>
            </div>
            <span class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-white text-sm font-bold mb-3" style="background: #D4632C;">{num}</span>
            <h3 class="text-lg font-semibold mb-2">{title}</h3>
            <p class="text-gray-500 text-sm">{desc}</p>
          </div>
        ))}
      </div>

      <a href="/contact" class="btn-primary reveal">See It In Action &rarr;</a>
    </div>
  </section>

  <!-- FEATURES -->
  <section class="section-padding" style="background: #F3F4F6;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Features</p>
      <h2 class="text-center mb-4 reveal">Everything Your Receptionist Does.<br />Plus Everything She Doesn't.</h2>
      <p class="text-center text-gray-500 text-lg mb-16 max-w-2xl mx-auto reveal">
        Built on enterprise-grade Telnyx Voice AI. Sounds like a real person, not a robot.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {[
          {
            title: '24/7 Live Answering',
            desc: 'Nights, weekends, holidays. The 6am emergency and the Sunday morning call — always answered.',
            icon: 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707',
          },
          {
            title: 'Natural AI Voice',
            desc: 'Callers think they\'re talking to a real person. No "press 1 for..." — a real conversation.',
            icon: 'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z',
          },
          {
            title: 'Instant Booking',
            desc: 'Books callers directly into your calendar. No back-and-forth phone tag.',
            icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
          },
          {
            title: 'SMS Lead Alerts',
            desc: 'Every caller\'s name, number, and needs — texted to you in real time.',
            icon: 'M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z',
          },
          {
            title: 'Custom-Trained',
            desc: 'Knows your services, pricing, and area. A plumber\'s AI sounds different than a dentist\'s.',
            icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
          },
          {
            title: 'Bilingual',
            desc: 'English + Spanish. 13% of Charlotte speaks Spanish at home. Don\'t lose those jobs.',
            icon: 'M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129',
          },
        ].map(({ title, desc, icon }, i) => (
          <div class={`card reveal reveal-delay-${(i % 3) + 1}`}>
            <div class="icon-box">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">{title}</h3>
            <p class="text-gray-500 text-sm leading-relaxed">{desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SOCIAL PROOF -->
  <section class="section-padding" style="background: #F8F9FA;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Testimonials</p>
      <h2 class="text-center mb-16 reveal">What Local Business Owners Are Saying</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {[
          {
            quote: 'First week with Ascend Systems, I booked 4 jobs I would have lost. That\'s over $5,000 from a $199 service.',
            name: 'Home Services',
            location: 'Mint Hill, NC',
          },
          {
            quote: 'My old answering service cost $400/mo and still put people on hold. Ascend answers instantly and actually books the appointment.',
            name: 'Professional Services',
            location: 'Matthews, NC',
          },
          {
            quote: 'I was skeptical about AI answering my phone. Then I listened to the first call recording. I couldn\'t tell it wasn\'t a person.',
            name: 'Contractor',
            location: 'Waxhaw, NC',
          },
        ].map(({ quote, name, location }, i) => (
          <div class={`card reveal reveal-delay-${i + 1}`}>
            <div class="flex gap-0.5 mb-4">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5 fill-current" style="color: #D4632C;" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
              ))}
            </div>
            <p class="text-charcoal leading-relaxed mb-6">"{quote}"</p>
            <p class="text-sm text-gray-500 font-medium">{name} — {location}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- PRICING -->
  <section class="section-padding" style="background: #F3F4F6;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Pricing</p>
      <h2 class="text-center mb-4 reveal">Simple Pricing. No Surprises.</h2>
      <p class="text-center text-gray-500 text-lg mb-16 max-w-xl mx-auto reveal">
        Every plan includes 24/7 answering, SMS alerts, and call recordings. No hidden fees.
      </p>

      <div class="grid md:grid-cols-3 gap-6 md:gap-4 max-w-4xl mx-auto mb-8 reveal">
        <PricingCard
          name="Starter"
          price={199}
          description="Best for solo operators"
          minutes="200"
          features={[
            '24/7 live answering',
            'Lead capture + SMS alerts',
            'Appointment booking',
            'Call recordings',
            'Basic AI training',
          ]}
        />
        <PricingCard
          name="Professional"
          price={299}
          description="Best for growing businesses"
          minutes="500"
          popular={true}
          features={[
            'Everything in Starter',
            'Bilingual (English + Spanish)',
            'CRM integration',
            'Advanced AI training',
            'Priority support',
          ]}
        />
        <PricingCard
          name="Enterprise"
          price={499}
          description="Best for multi-location"
          minutes="Unlimited"
          ctaText="Contact Brian"
          features={[
            'Everything in Professional',
            'Unlimited call minutes',
            'Multi-location support',
            'Dedicated account manager',
            'Custom integrations',
          ]}
        />
      </div>

      <div class="text-center reveal">
        <a href="/pricing" class="btn-text">See full pricing details &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section-padding" style="background: #F8F9FA;">
    <div class="container-narrow max-w-2xl">
      <h2 class="text-center mb-16 reveal">Questions We Get All the Time</h2>

      <div class="reveal" style="border-top: 1px solid #E5E7EB;">
        {[
          { q: 'Does it really sound like a real person?', a: 'Yes. We use Telnyx Voice AI, the most natural-sounding AI voice on the market. Business owners listen to recordings and can\'t tell it was AI.' },
          { q: 'What if the caller has a question AI can\'t handle?', a: 'It takes a detailed message and texts you immediately. It never guesses or makes up answers.' },
          { q: 'How long does setup take?', a: 'About 15 minutes. We hop on a call, ask about your business, and configure your AI assistant. Most businesses are live the same day.' },
          { q: 'Will my customers know they\'re talking to AI?', a: 'Most don\'t. And they don\'t care — they care that someone picked up and booked them an appointment.' },
          { q: 'Can I keep my existing phone number?', a: 'Absolutely. We set up call forwarding. Your customers call the same number they always have.' },
          { q: 'Is there a contract?', a: 'No. Month-to-month. Cancel anytime. We don\'t lock you in because the service pays for itself.' },
        ].map(({ q, a }) => (
          <details class="group" style="border-bottom: 1px solid #E5E7EB;">
            <summary class="flex items-center justify-between py-5 text-left">
              <span class="font-medium text-charcoal pr-4">{q}</span>
              <svg class="chevron w-5 h-5 flex-shrink-0 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <div class="pb-5 text-gray-500 leading-relaxed pr-10">{a}</div>
          </details>
        ))}
      </div>
    </div>
  </section>

</BaseLayout>
