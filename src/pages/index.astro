---
import BaseLayout from '../layouts/BaseLayout.astro';
import DemoCTA from '../components/DemoCTA.astro';
import FinalCTA from '../components/FinalCTA.astro';
import PricingCard from '../components/PricingCard.astro';
import config from '../data/site-config.json';
---

<BaseLayout title="Home">

  <!-- HERO — Mountain background with overlay -->
  <section class="relative overflow-hidden" style="padding: 0.75rem 1.5rem 1rem;">
    <div class="absolute inset-0 z-0">
      <img src="/images/hero-bg.jpg" alt="" class="w-full h-full object-cover object-center" />
      <div class="absolute inset-0" style="background: linear-gradient(90deg, rgba(30, 42, 50, 0.92) 0%, rgba(30, 42, 50, 0.75) 50%, rgba(30, 42, 50, 0.5) 100%);"></div>
    </div>
    <div class="container-narrow relative z-10">
      <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
        <!-- Left — Copy -->
        <div class="text-center md:text-left">
          <!-- Logo -->
          <div class="flex justify-center md:justify-start mb-3 reveal md:pl-16">
            <img src="/images/logo.png" alt="Ascend Systems" class="h-32 md:h-44 w-auto" />
          </div>

          <h1 class="text-white mb-4 reveal" style="font-size: clamp(2.5rem, 6vw, 3.75rem); font-weight: 800; line-height: 1.05; letter-spacing: -0.03em;">
            Run your business.<br />
            <span style="color: #D4632C;">We'll run the rest.</span>
          </h1>
          <p class="text-lg md:text-xl text-gray-400 max-w-2xl mb-6 reveal" style="line-height: 1.65;">
            AI phone answering. Automated follow-ups. CRM. Reputation management. Social media. Websites. One platform, one price.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start mb-4 reveal">
            <a href="/contact" class="btn-primary text-sm !px-6 !py-2.5">
              Book a Free Demo
            </a>
            <a href={`tel:${config.phone.demo.replace(/[^0-9+]/g, '')}`} class="btn-secondary-dark text-sm !px-6 !py-2.5 inline-flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
              Call the Demo
            </a>
          </div>

          <p class="text-sm text-gray-500 reveal">
            No contracts &middot; 30-day money-back guarantee &middot; Cancel anytime
          </p>
        </div>

        <!-- Right — Phone mockup -->
        <div class="hidden md:block reveal">
          <div class="max-w-sm ml-auto">
            <div class="rounded-2xl p-1" style="background: #263540; box-shadow: 0 24px 64px rgba(0,0,0,0.4);">
              <div class="rounded-xl p-5 space-y-3" style="background: #1E2A32;">
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-8 h-8 rounded-lg flex items-center justify-center" style="background: rgba(212, 99, 44, 0.15);">
                    <svg class="w-4 h-4" style="color: #D4632C;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                  </div>
                  <div>
                    <p class="text-white text-sm font-semibold">Ascend Systems</p>
                    <p class="text-gray-500 text-xs">Today's Activity</p>
                  </div>
                  <span class="ml-auto text-xs text-gray-500">live</span>
                </div>
                <div class="space-y-2">
                  <div class="rounded-lg px-3 py-2.5 flex items-center gap-3" style="background: #263540; border: 1px solid #2E4050;">
                    <svg class="w-4 h-4 flex-shrink-0" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                    <div class="text-xs"><span class="text-white font-medium">Call answered</span><span class="text-gray-500 ml-2">Mike T. — booked 8am</span></div>
                  </div>
                  <div class="rounded-lg px-3 py-2.5 flex items-center gap-3" style="background: #263540; border: 1px solid #2E4050;">
                    <svg class="w-4 h-4 flex-shrink-0" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" /></svg>
                    <div class="text-xs"><span class="text-white font-medium">New review</span><span class="text-gray-500 ml-2">5-star on Google</span></div>
                  </div>
                  <div class="rounded-lg px-3 py-2.5 flex items-center gap-3" style="background: #263540; border: 1px solid #2E4050;">
                    <svg class="w-4 h-4 flex-shrink-0" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" /></svg>
                    <div class="text-xs"><span class="text-white font-medium">Social posted</span><span class="text-gray-500 ml-2">IG + Facebook auto</span></div>
                  </div>
                  <div class="rounded-lg px-3 py-2.5 flex items-center gap-3" style="background: #263540; border: 1px solid #2E4050;">
                    <svg class="w-4 h-4 flex-shrink-0" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                    <div class="text-xs"><span class="text-white font-medium">Follow-up sent</span><span class="text-gray-500 ml-2">Sarah K. — estimate reminder</span></div>
                  </div>
                </div>
                <div class="flex items-center justify-between pt-2 text-xs">
                  <span class="text-gray-500">4 actions today</span>
                  <span class="font-medium" style="color: #22C55E;">All automated</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- TRUST BAR -->
  <section class="py-6" style="background: #EDF2F7; border-bottom: 1px solid #CBD5E0;">
    <div class="container-narrow">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        {[
          { label: 'One Platform', icon: 'M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zm10 0a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z' },
          { label: 'No Contracts', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
          { label: '30-Day Guarantee', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
          { label: 'Locally Owned', icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z' },
        ].map(({ label, icon }) => (
          <div class="flex items-center justify-center gap-2">
            <svg class="w-4 h-4" style="color: #D4632C;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
            </svg>
            <span class="text-sm font-medium text-gray-500">{label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- PROBLEM — Stats on dark -->
  <section class="section-dark grain section-padding relative overflow-hidden">
    <div class="absolute inset-0" style="background: radial-gradient(ellipse 60% 50% at 30% 50%, rgba(59, 107, 138, 0.04), transparent);"></div>
    <div class="container-narrow text-center relative z-10">
      <p class="stat-label text-gray-400 mb-4 reveal">The problem</p>
      <h2 class="text-white mb-4 reveal">
        You're Running a Business<br />and Five Side Hustles
      </h2>
      <p class="text-gray-400 text-lg mb-16 max-w-xl mx-auto reveal">Sound familiar?</p>

      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {[
          { stat: '62%', desc: 'of calls to small businesses go unanswered' },
          { stat: '4.5 hrs', desc: 'per week spent on admin that could be automated' },
          { stat: '74%', desc: 'of customers check reviews before calling' },
        ].map(({ stat, desc }, i) => (
          <div class={`card-dark text-center reveal reveal-delay-${i + 1}`}>
            <span class="block stat-number text-5xl md:text-6xl mb-3 stat-glow">{stat}</span>
            <p class="text-gray-400 text-sm">{desc}</p>
          </div>
        ))}
      </div>

      <div class="max-w-2xl mx-auto text-gray-400 space-y-5 text-lg leading-relaxed reveal">
        <p>
          You didn't start your business to answer phones, chase reviews, post on social media, and wrestle with five different software tools. You started it to do the work.
        </p>
        <p>
          But here you are — missing calls on the ladder, forgetting follow-ups, ignoring your Google reviews, and paying for a website that hasn't been updated in two years. Each one costs you money. Together, they're killing your growth.
        </p>
      </div>
    </div>
  </section>

  <!-- SOLUTION — 3 Steps -->
  <section class="section-padding dot-grid" style="background: #EDF2F7;">
    <div class="container-narrow text-center">
      <p class="stat-label mb-4 reveal" style="color: #D4632C;">How it works</p>
      <h2 class="mb-6 reveal">One Platform. Everything Handled.</h2>
      <p class="text-lg text-gray-500 mb-16 max-w-2xl mx-auto reveal">
        {config.brand} replaces the patchwork of tools you're paying for. We set it up, you focus on the work.
      </p>

      <div class="grid md:grid-cols-3 gap-6 mb-16">
        {[
          {
            num: '1',
            title: 'We Build Your System',
            desc: 'Phone AI, automations, website, CRM — configured for your business in one onboarding call.',
            icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065zM15 12a3 3 0 11-6 0 3 3 0 016 0z',
          },
          {
            num: '2',
            title: 'It Runs on Autopilot',
            desc: 'Calls get answered. Follow-ups go out. Reviews get requested. Social gets posted. All automatic.',
            icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
          },
          {
            num: '3',
            title: 'You See the Results',
            desc: 'Every lead, every call, every review — tracked in one dashboard. You stay in the loop without lifting a finger.',
            icon: 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z',
          },
        ].map(({ num, title, desc, icon }, i) => (
          <div class={`card text-center reveal reveal-delay-${i + 1}`}>
            <div class="icon-box mx-auto">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
              </svg>
            </div>
            <span class="inline-flex items-center justify-center w-8 h-8 rounded-lg text-white text-sm font-bold mb-3" style="background: #D4632C;">{num}</span>
            <h3 class="text-lg font-semibold mb-2">{title}</h3>
            <p class="text-gray-500 text-sm">{desc}</p>
          </div>
        ))}
      </div>

      <a href="/contact" class="btn-primary reveal">See It In Action &rarr;</a>
    </div>
  </section>

  <!-- FEATURES -->
  <section class="section-padding" style="background: #E2E8F0;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">The Platform</p>
      <h2 class="text-center mb-4 reveal">Six Tools. One Login. Zero Headaches.</h2>
      <p class="text-center text-gray-500 text-lg mb-16 max-w-2xl mx-auto reveal">
        Everything a local business needs to grow — without hiring a marketing team or juggling ten subscriptions.
      </p>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-5">
        {[
          {
            title: 'AI Phone Answering',
            desc: '24/7 live answering that sounds human. Books appointments, captures leads, texts you instantly.',
            icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z',
          },
          {
            title: 'CRM & Pipeline',
            desc: 'Every lead, job, and follow-up in one place. Know exactly where every dollar is in your pipeline.',
            icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z',
          },
          {
            title: 'Automated Follow-Ups',
            desc: 'Texts, emails, and reminders that go out automatically. No leads slip through the cracks.',
            icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
          },
          {
            title: 'Reputation Management',
            desc: 'Automatically request Google reviews after every job. Monitor and respond from one dashboard.',
            icon: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
          },
          {
            title: 'Social Media Management',
            desc: 'Posts created and scheduled across Instagram, Facebook, and Google. Consistent presence, zero effort.',
            icon: 'M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z',
          },
          {
            title: 'Website & Funnels',
            desc: 'A fast, modern website that actually converts. Landing pages, booking forms, and payment built in.',
            icon: 'M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9',
          },
        ].map(({ title, desc, icon }, i) => (
          <div class={`card reveal reveal-delay-${(i % 3) + 1}`}>
            <div class="icon-box">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">{title}</h3>
            <p class="text-gray-500 text-sm leading-relaxed">{desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- DEMO CTA -->
  <DemoCTA />

  <!-- SOCIAL PROOF -->
  <section class="section-padding" style="background: #EDF2F7;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Testimonials</p>
      <h2 class="text-center mb-16 reveal">What Local Business Owners Are Saying</h2>

      <div class="grid md:grid-cols-3 gap-6">
        {[
          {
            quote: 'First week with Ascend Systems, I booked 4 jobs I would have lost. That\'s over $5,000 from a $199 service.',
            name: 'Home Services',
            location: 'Mint Hill, NC',
          },
          {
            quote: 'My old answering service cost $400/mo and still put people on hold. Ascend answers instantly and actually books the appointment.',
            name: 'Professional Services',
            location: 'Matthews, NC',
          },
          {
            quote: 'I was skeptical about AI answering my phone. Then I listened to the first call recording. I couldn\'t tell it wasn\'t a person.',
            name: 'Contractor',
            location: 'Waxhaw, NC',
          },
        ].map(({ quote, name, location }, i) => (
          <div class={`card reveal reveal-delay-${i + 1}`}>
            <div class="flex gap-0.5 mb-4">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5 fill-current" style="color: #D4632C;" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
              ))}
            </div>
            <p class="text-charcoal leading-relaxed mb-6">"{quote}"</p>
            <p class="text-sm text-gray-500 font-medium">{name} — {location}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- PRICING -->
  <section class="section-padding" style="background: #E2E8F0;">
    <div class="container-narrow">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Pricing</p>
      <h2 class="text-center mb-4 reveal">Simple Pricing. No Surprises.</h2>
      <p class="text-center text-gray-500 text-lg mb-16 max-w-xl mx-auto reveal">
        Every plan includes 24/7 answering, SMS alerts, and call recordings. No hidden fees.
      </p>

      <div class="grid md:grid-cols-3 gap-6 md:gap-4 max-w-4xl mx-auto mb-8 reveal">
        <PricingCard
          name="Starter"
          price={199}
          description="Best for solo operators"
          minutes="200"
          features={[
            '24/7 live answering',
            'Lead capture + SMS alerts',
            'Appointment booking',
            'Call recordings',
            'Basic AI training',
          ]}
        />
        <PricingCard
          name="Professional"
          price={299}
          description="Best for growing businesses"
          minutes="500"
          popular={true}
          features={[
            'Everything in Starter',
            'Bilingual (English + Spanish)',
            'CRM integration',
            'Advanced AI training',
            'Priority support',
          ]}
        />
        <PricingCard
          name="Enterprise"
          price={499}
          description="Best for multi-location"
          minutes="Unlimited"
          ctaText="Contact Brian"
          features={[
            'Everything in Professional',
            'Unlimited call minutes',
            'Multi-location support',
            'Dedicated account manager',
            'Custom integrations',
          ]}
        />
      </div>

      <div class="text-center reveal">
        <a href="/pricing" class="btn-text">See full pricing details &rarr;</a>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="section-padding" style="background: #EDF2F7;">
    <div class="container-narrow max-w-2xl">
      <h2 class="text-center mb-16 reveal">Questions We Get All the Time</h2>

      <div class="reveal" style="border-top: 1px solid #CBD5E0;">
        {[
          { q: 'Do I need all six tools?', a: 'Nope. We turn on what you need. Most businesses start with phone answering and CRM, then add reputation and social once they see the ROI.' },
          { q: 'Does the AI phone really sound like a person?', a: 'Yes. Business owners listen to call recordings and can\'t tell. Callers just know someone picked up and helped them.' },
