---
import BaseLayout from '../layouts/BaseLayout.astro';
import config from '../data/site-config.json';
---

<BaseLayout title="Try the Demo" description="Hear Ascend Systems answer your phone live. Call the demo number right now — takes 60 seconds.">

  <!-- Hero — Dark -->
  <section class="hero-gradient grain section-padding relative overflow-hidden">
    <div class="absolute inset-0 z-0" style="background: radial-gradient(ellipse 50% 60% at 50% 50%, rgba(59, 107, 138, 0.06), transparent);"></div>
    <div class="max-w-lg mx-auto text-center relative z-10">
      <div class="icon-box-dark mx-auto reveal">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
      </div>
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Live Demo</p>
      <h1 class="text-white text-4xl md:text-5xl mb-6 reveal">Hear Your AI Assistant.<br />Live. Right Now.</h1>
      <p class="text-xl text-gray-400 mb-12 reveal">
        Call this number. Hear an AI assistant answer. Takes 60 seconds.
      </p>

      <!-- Giant phone number -->
      <div class="mb-12 reveal">
        <a
          href={`tel:${config.phone.demo.replace(/[^0-9+]/g, '')}`}
          class="block font-mono text-5xl md:text-6xl font-medium tracking-tight mb-8 transition-colors stat-glow"
          style="color: #D4632C;"
        >
          {config.phone.demo}
        </a>
        <a
          href={`tel:${config.phone.demo.replace(/[^0-9+]/g, '')}`}
          class="btn-primary text-lg !px-10 !py-4"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
          Call Now
        </a>
      </div>
    </div>
  </section>

  <!-- What to expect -->
  <section class="section-padding" style="background: #EDF2F7;">
    <div class="max-w-lg mx-auto">
      <h3 class="text-lg font-semibold mb-6 text-center reveal">What to expect</h3>
      <ol class="space-y-4 reveal">
        {[
          { text: 'An AI assistant will answer the phone', icon: 'M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z' },
          { text: 'It will greet you and ask how it can help', icon: 'M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z' },
          { text: 'Try asking about services, hours, or booking', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
          { text: 'The whole thing takes about 60 seconds', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
        ].map(({ text, icon }, i) => (
          <li class="card !p-4 flex items-center gap-4">
            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full text-white text-sm font-bold flex-shrink-0" style="background: #D4632C;">{i + 1}</span>
            <span class="text-gray-600">{text}</span>
          </li>
        ))}
      </ol>
    </div>
  </section>

  <!-- Post-call form -->
  <section class="section-padding" style="background: #E2E8F0;">
    <div class="max-w-lg mx-auto text-center">
      <div class="reveal">
        <h2 class="text-2xl font-semibold mb-3">Impressed?</h2>
        <p class="text-gray-500 mb-8">Let's set this up for your business.</p>
      </div>

      <div class="card !p-8 text-left reveal">
        <form id="demo-form" class="space-y-5">
          <div>
            <label for="name" class="label">Name</label>
            <input type="text" id="name" name="name" required class="input" />
          </div>
          <div>
            <label for="phone" class="label">Phone</label>
            <input type="tel" id="phone" name="phone" required class="input" />
          </div>
          <div>
            <label for="business" class="label">Business Name</label>
            <input type="text" id="business" name="business" required class="input" />
          </div>
          <div>
            <label for="type" class="label">Business Type</label>
            <select id="type" name="type" required class="input">
              <option value="">Select...</option>
              <option>Plumber</option>
              <option>HVAC</option>
              <option>Electrician</option>
              <option>Dentist</option>
              <option>Attorney</option>
              <option>Contractor</option>
              <option>Auto Shop</option>
              <option>Salon</option>
              <option>Veterinarian</option>
              <option>Property Manager</option>
              <option>Other</option>
            </select>
          </div>
          <button type="submit" class="btn-primary w-full !py-4 text-lg">
            Get Started
          </button>
        </form>
      </div>

      <p class="text-sm text-gray-400 mt-6 reveal">
        Or call Brian directly:
        <a href={`tel:${config.phone.brian.replace(/[^0-9+]/g, '')}`} class="font-medium transition-colors hover:underline" style="color: #D4632C;">
          {config.phone.brian}
        </a>
      </p>
    </div>
  </section>

  <script>
    const form = document.getElementById('demo-form') as HTMLFormElement;
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      btn.textContent = 'Sending...';
      btn.disabled = true;

      await new Promise(r => setTimeout(r, 800));
      form.innerHTML = `
        <div class="text-center py-8">
          <svg class="w-12 h-12 mx-auto mb-4" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <h3 class="text-xl font-semibold text-charcoal mb-2">Thanks! Brian will reach out within 24 hours.</h3>
          <p class="text-gray-500">Usually same day.</p>
        </div>
      `;
    });
  </script>

</BaseLayout>
