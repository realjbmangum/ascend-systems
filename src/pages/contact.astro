---
import BaseLayout from '../layouts/BaseLayout.astro';
import FinalCTA from '../components/FinalCTA.astro';
import config from '../data/site-config.json';
---

<BaseLayout title="Contact" description="Get started with Ascend Systems. Book a demo, fill out the form, or call Brian directly.">

  <!-- Hero â€” Dark -->
  <section class="hero-gradient grain section-padding !pb-12 relative overflow-hidden">
    <div class="absolute inset-0 z-0" style="background: radial-gradient(ellipse 40% 40% at 50% 30%, rgba(59, 107, 138, 0.04), transparent);"></div>
    <div class="container-narrow text-center relative z-10">
      <p class="stat-label text-center mb-4 reveal" style="color: #D4632C;">Get Started</p>
      <h1 class="text-white mb-6 reveal">Let's Get Your<br />Phone Answered</h1>
      <p class="text-lg md:text-xl text-gray-400 max-w-xl mx-auto reveal">
        Pick whichever works for you.
      </p>
    </div>
  </section>

  <!-- Three Contact Options -->
  <section class="section-padding !pt-12 !pb-12" style="background: #EDF2F7;">
    <div class="container-narrow max-w-3xl">
      <div class="grid md:grid-cols-3 gap-6">
        <div class="card text-center reveal reveal-delay-1">
          <div class="icon-box mx-auto">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Book a Time</h3>
          <p class="text-gray-500 text-sm mb-5">Pick a slot on Brian's calendar. 10-min demo.</p>
          <a href={config.calendlyUrl} target="_blank" rel="noopener" class="btn-primary text-sm w-full">Book Now</a>
        </div>
        <div class="card text-center reveal reveal-delay-2">
          <div class="icon-box mx-auto">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Send a Message</h3>
          <p class="text-gray-500 text-sm mb-5">Fill out the form below. Brian responds within 24 hours.</p>
          <a href="#contact-form" class="btn-secondary text-sm w-full">Jump to Form</a>
        </div>
        <div class="card text-center reveal reveal-delay-3">
          <div class="icon-box mx-auto">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
          </div>
          <h3 class="text-lg font-semibold mb-2">Call Brian</h3>
          <p class="text-gray-500 text-sm mb-5">He answers his own phone.</p>
          <a href={`tel:${config.phone.brian.replace(/[^0-9+]/g, '')}`} class="btn-primary text-sm w-full">
            {config.phone.brian}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section id="contact-form" class="section-padding" style="background: #E2E8F0;">
    <div class="container-narrow max-w-lg">
      <h2 class="text-center mb-2 reveal">Tell Us About Your Business</h2>
      <p class="text-center text-gray-500 mb-10 reveal">We'll reach out within 24 hours. Usually same day.</p>

      <div class="card !p-8 reveal">
        <form id="contact-form-el" class="space-y-5">
          <div>
            <label for="c-name" class="label">Name *</label>
            <input type="text" id="c-name" name="name" required class="input" />
          </div>
          <div>
            <label for="c-phone" class="label">Phone *</label>
            <input type="tel" id="c-phone" name="phone" required class="input" />
          </div>
          <div>
            <label for="c-email" class="label">Email</label>
            <input type="email" id="c-email" name="email" class="input" />
          </div>
          <div>
            <label for="c-business" class="label">Business Name *</label>
            <input type="text" id="c-business" name="business" required class="input" />
          </div>
          <div>
            <label for="c-type" class="label">Business Type *</label>
            <select id="c-type" name="type" required class="input">
              <option value="">Select...</option>
              <option>Plumber</option>
              <option>HVAC</option>
              <option>Electrician</option>
              <option>Dentist</option>
              <option>Attorney</option>
              <option>Contractor</option>
              <option>Auto Shop</option>
              <option>Salon</option>
              <option>Veterinarian</option>
              <option>Property Manager</option>
              <option>Other</option>
            </select>
          </div>
          <div>
            <label for="c-message" class="label">Anything else? <span class="text-gray-400">(optional)</span></label>
            <textarea id="c-message" name="message" rows="3" class="input !h-auto py-3"></textarea>
          </div>
          <button type="submit" class="btn-primary w-full !py-4 text-lg">
            Get Started
          </button>
        </form>
      </div>
    </div>
  </section>

  <FinalCTA />

  <script>
    const form = document.getElementById('contact-form-el') as HTMLFormElement;
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      btn.textContent = 'Sending...';
      btn.disabled = true;

      await new Promise(r => setTimeout(r, 800));
      form.innerHTML = `
        <div class="text-center py-8">
          <svg class="w-12 h-12 mx-auto mb-4" style="color: #22C55E;" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <h3 class="text-xl font-semibold mb-2" style="color: #1E2A32;">Thanks! Brian will reach out within 24 hours.</h3>
          <p class="text-gray-500">Usually same day.</p>
        </div>
      `;
    });
  </script>

</BaseLayout>
